<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FCFCFC"
        >

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_find_title"
                style="@style/headerText"
                android:fontFamily="@font/bariol_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Selamat Datang"
                android:textSize="28sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvkeluar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keluar"
                android:fontFamily="@font/bariol_regular"
                android:textColor="@color/bottomNavigationTextColor"
                android:drawablePadding="5dp"
                android:layout_marginTop="24dp"
                android:drawableTop="@drawable/ic_logout"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/paddingsmall"
                android:layout_marginBottom="@dimen/normalPadding"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Sistem Informasi Pondok Pesantren Al - Ifadah"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_find_title" />

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/imgbanner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#444"
                app:animateOnBoundary="true"
                app:autoPlay="true"
                app:fillColor="#FFFFFFFF"
                app:indicatorGravity="top"
                app:indicatorVisibility="gone"
                android:layout_marginTop="@dimen/paddingsmall"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:pageColor="#00000000"
                app:pageTransformInterval="1500"
                app:pageTransformer="depth"
                app:radius="6dp"
                app:slideInterval="3000"
                app:strokeColor="#FF777777"
                app:strokeWidth="1dp" />

            <!--            <com.yarolegovich.discretescrollview.DiscreteScrollView-->
            <!--                android:id="@+id/item_picker"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="@dimen/normalPadding"-->
            <!--                android:layout_marginBottom="@dimen/normalPadding"-->
            <!--                app:layout_constraintEnd_toEndOf="parent"-->

            <!--                app:layout_constraintStart_toStartOf="parent"-->
            <!--                app:layout_constraintTop_toBottomOf="@+id/textView3"-->
            <!--                tools:listitem="@layout/item_shop_card" />-->
            <!--            &lt;!&ndash; orientation is optional, default is horizontal &ndash;&gt;-->

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normalPadding"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgbanner" />

            <LinearLayout
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:id="@+id/ll_popular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_pager">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/headerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:text="Fitur Aplikasi" />

                    <TextView
                        style="@style/headerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:text=". ." />
                </RelativeLayout>

                <include layout="@layout/item_daftaronline" />

                <include layout="@layout/item_pendaftar" />

                <include layout="@layout/item_informasi" />

                <include layout="@layout/item_beritadashboard" />

                <include layout="@layout/item_album" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</FrameLayout>