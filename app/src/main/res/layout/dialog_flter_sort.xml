<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="7dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:background="@color/blue_active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="12dp"
                android:text="Filters"
                android:textColor="#fff"
                android:textSize="18sp"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/iv_rate_close"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:padding="6dp"
                android:src="@drawable/ic_close"
                tools:ignore="ContentDescription"
                app:tint="#fff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/Titele_AA_Light"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Sort by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_menunggupembayaran"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textSize="15sp"
                    android:text="Menunggu Pembayaran"
                    android:background="@drawable/background_filter_deactive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_menunggukonfirmasi"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textSize="15sp"
                    android:text="Menunggu Konfirmasi"
                    android:background="@drawable/background_filter_deactive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

<!--            <LinearLayout-->
<!--                android:layout_marginStart="5dp"-->
<!--                android:orientation="horizontal"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content">-->
<!--                <TextView-->
<!--                    android:id="@+id/tv_sudahdibayar"-->
<!--                    android:layout_marginBottom="10dp"-->
<!--                    android:paddingTop="10dp"-->
<!--                    android:paddingBottom="10dp"-->
<!--                    android:paddingStart="10dp"-->
<!--                    android:paddingEnd="10dp"-->
<!--                    android:textSize="15sp"-->
<!--                    android:text="Sudah DI Konfirmasi"-->
<!--                    android:background="@drawable/background_filter_deactive"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"/>-->

                <TextView
                    android:id="@+id/tv_seleksi"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="15sp"
                    android:text="Seleksi tes Offline"
                    android:background="@drawable/background_filter_active"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
<!--            </LinearLayout>-->



            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:background="@color/Boder_Night" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">



                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_cancel_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:text="Batal"
                    android:translationZ="0dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="#000"
                    android:background="@drawable/background_filter_deactive"
                    android:backgroundTint="#FFCA28" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_submit_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:text="OK"
                    android:layout_marginStart="30dp"
                    android:translationZ="0dp"
                    android:textColor="#FFFFFF"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:background="@drawable/background_filter_deactive"
                    android:backgroundTint="@color/colorAccent_Light"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>